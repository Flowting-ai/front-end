# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real secrets to version control

# Django Backend
DJANGO_SECRET_KEY=your-django-secret-key-here

# Database
DATABASE_URL=your-database-url-here

# API Keys (NEVER expose these in client-side code)
HUGGINGFACE_API_KEY=your-huggingface-key-here
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GROQ_API_KEY=your-groq-key-here
OPENROUTER_API_KEY=your-openrouter-key-here
JINA_API_KEY=your-jina-key-here

# Vector Database
QDRANT_URL=your-qdrant-url-here
QDRANT_API_KEY=your-qdrant-key-here

# Email Configuration (Backend only)
EMAIL_HOST=your-email-host
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Frontend Environment Variables
# These are safe to expose to the client (use NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_HOST_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Production Settings
NODE_ENV=development

# Security Notes:
# 1. Never commit this file with real values
# 2. Use different keys for development/staging/production
# 3. Rotate keys regularly
# 4. Use a secrets management service in production (AWS Secrets Manager, HashiCorp Vault, etc.)
# 5. Only use NEXT_PUBLIC_ prefix for truly public, non-sensitive values
